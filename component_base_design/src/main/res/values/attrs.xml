<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageViewRounded">
        <attr name="ivr_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RasioLinearLayout">
        <attr name="numerator" format="float" type="integer" />
        <attr name="divide" format="float" type="integer" />
        <attr name="compare">
            <flag name="getWidthByHeight" value="0" />
            <flag name="getHeightByWidth" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="ImageViewMeasurement">
        <attr name="width_divider" format="integer" />
        <attr name="height_divider" format="integer" />
        <attr name="measure_with_height" format="boolean" />
    </declare-styleable>
</resources>